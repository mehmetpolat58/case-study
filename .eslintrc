{
  "extends": [
    "airbnb",
    "plugin:jsx-a11y/recommended"
  ],
  "settings": {
    "import/resolver": {
      "node": {          
        "paths": [".", "src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "plugins": [
    "jsx-a11y"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "failOnError": 0,
    "max-len": "off",
    "react/prop-types": 0,
    "import/no-extraneous-dependencies": [
      "error", {
         "devDependencies": true
      }
    ]
  }
}